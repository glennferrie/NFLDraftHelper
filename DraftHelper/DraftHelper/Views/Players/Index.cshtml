@model IEnumerable<DraftHelper.Models.NFLPlayer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Players</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ESPNRank)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MyRank)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepthChart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NFLTeam.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ESPNRank)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MyRank)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepthChart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NFLTeam.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
