@model DraftHelper.Models.NFLPlayer

@{
    ViewBag.Title = "AddPlayer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Player to @ViewBag.TeamName</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="form-horizontal">
        <legend>Player Info</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="control-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
			<div class="controls">
				@Html.EditorFor(model => model.Name)
				@Html.ValidationMessageFor(model => model.Name, null, new { @class = "help-inline" })
			</div>
		</div>

        <div class="control-group">
            @Html.LabelFor(model => model.Position, new { @class = "control-label" })
			<div class="controls">
				@Html.EditorFor(model => model.Position)
				@Html.ValidationMessageFor(model => model.Position, null, new { @class = "help-inline" })
			</div>
		</div>

        <div class="control-group">
            @Html.LabelFor(model => model.ESPNRank, new { @class = "control-label" })
			<div class="controls">
				@Html.EditorFor(model => model.ESPNRank)
				@Html.ValidationMessageFor(model => model.ESPNRank, null, new { @class = "help-inline" })
			</div>
		</div>

        <div class="control-group">
            @Html.LabelFor(model => model.MyRank, new { @class = "control-label" })
			<div class="controls">
				@Html.EditorFor(model => model.MyRank)
				@Html.ValidationMessageFor(model => model.MyRank, null, new { @class = "help-inline" })
			</div>
		</div>

        <div class="control-group">
            @Html.LabelFor(model => model.DepthChart, new { @class = "control-label" })
			<div class="controls">
				@Html.EditorFor(model => model.DepthChart)
				@Html.ValidationMessageFor(model => model.DepthChart, null, new { @class = "help-inline" })
			</div>
		</div>

        <div class="control-group" style="display:none;">
            @Html.LabelFor(model => model.NFLTeam_Id, new { @class = "control-label" })
			<div class="controls">
				@Html.EditorFor(model => model.NFLTeam_Id)
				@Html.ValidationMessageFor(model => model.NFLTeam_Id, null, new { @class = "help-inline" })
			</div>
		</div>

        <div class="form-actions no-color">
            <input type="submit" value="Save" class="btn" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

