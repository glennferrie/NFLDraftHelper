				@Html.EditorFor(model => model.TeamName)
				@Html.ValidationMessageFor(model => model.TeamName, null, new { @class = "help-inline" })
			</div>
		</div>

        <div class="control-group">
            @Html.LabelFor(model => model.DraftOrder, new { @class = "control-label" })
