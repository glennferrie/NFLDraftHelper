{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="form-horizontal">
        <legend>TeamOwner</legend>

        <div class="control-group">
            @Html.LabelFor(model => model.TeamName, new { @class = "control-label" })
