				@Html.EditorFor(model => model.DraftOrder)
				@Html.ValidationMessageFor(model => model.DraftOrder, null, new { @class = "help-inline" })
			</div>
		</div>

        <div class="form-actions no-color">
            <input type="submit" value="Create" class="btn" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

